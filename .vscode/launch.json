    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug do-nothing",
            "cargo": {
                "args": [
                    "build",
                    "--bin=binance-auto-sell",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "binance-auto-sell",
                    "kind": "bin"
                }
            },
            "args": [ "do-nothing", "-t" ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "binance_auto_sell=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug auto-buy",
            "cargo": {
                "args": [
                    "build",
                    "--bin=binance-auto-sell",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "binance-auto-sell",
                    "kind": "bin"
                }
            },
            "args": [ "auto-buy", "-t" ],
            "cwd": "${workspaceFolder}",
            "env": {
                "BINANCE_CONFIG": "data/config.toml",
                "RUST_LOG": "binance_auto_sell=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug auto-sell",
            "cargo": {
                "args": [
                    "build",
                    "--bin=binance-auto-sell",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "binance-auto-sell",
                    "kind": "bin"
                }
            },
            "args": [ "auto-sell", "-t" ],
            "cwd": "${workspaceFolder}",
            "env": {
                "BINANCE_CONFIG": "data/config.toml",
                "RUST_LOG": "binance_auto_sell=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug buy-market-value",
            "cargo": {
                "args": [
                    "build",
                    "--bin=binance-auto-sell",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "binance-auto-sell",
                    "kind": "bin"
                }
            },
            "args": [ "buy-market-value", "-t", "SOLUSD", "10" ],
            "cwd": "${workspaceFolder}",
            "env": {
                "BINANCE_CONFIG": "data/config.toml",
                "RUST_LOG": "binance_auto_sell=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug sell-market-value",
            "cargo": {
                "args": [
                    "build",
                    "--bin=binance-auto-sell",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "binance-auto-sell",
                    "kind": "bin"
                }
            },
            "args": [ "sell-market-value", "-t", "SOLUSD", "10" ],
            "cwd": "${workspaceFolder}",
            "env": {
                "BINANCE_CONFIG": "data/config.toml",
                "RUST_LOG": "binance_auto_sell=trace"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=binance-auto-sell",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "binance-auto-sell",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=cli",
                    "--package=binance-auto-sell"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}